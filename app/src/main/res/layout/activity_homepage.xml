<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".homepage">

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency trigger "
        android:textColor="#424040"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btnsos"
        app:layout_constraintStart_toStartOf="@+id/btnsos"
        app:layout_constraintTop_toBottomOf="@+id/btnsos" />

    <ImageView
        android:id="@+id/inlogin5"
        android:layout_width="0dp"
        android:layout_height="115dp"
        android:background="#ED847C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_white_background" />

    <ImageView
        android:id="@+id/addcontact"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:background="#FFFFFF"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/btnsos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnsos"
        app:srcCompat="@drawable/add_user" />

    <Button
        android:id="@+id/btncontact1"
        android:layout_width="232dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FB7E56"
        android:text="Contact 1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inlogin5" />

    <Button
        android:id="@+id/btncontact2"
        android:layout_width="232dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FB7E56"
        android:text="Contact 2"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncontact1" />

    <Button
        android:id="@+id/btncontact3"
        android:layout_width="232dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FB7E56"
        android:text="contact 3"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncontact2" />

    <Button
        android:id="@+id/btncontact4"
        android:layout_width="232dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FB7E56"
        android:text="contact 4"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncontact3" />

    <Button
        android:id="@+id/btncontact5"
        android:layout_width="232dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FB7E56"
        android:text="contact 5"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncontact4" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="28dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_white" />

    <Button
        android:id="@+id/btnsos"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#FF0000"
        android:text="SOS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="820dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add contact"
        android:textColor="#424040"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/addcontact"
        app:layout_constraintStart_toStartOf="@+id/addcontact"
        app:layout_constraintTop_toBottomOf="@+id/btnsos" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="319dp"
        android:layout_height="108dp"
        android:fontFamily="@font/adamina"
        android:text="Your safety is our duty"
        android:textColor="#CCFF5722"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/t2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncontact1" />

</androidx.constraintlayout.widget.ConstraintLayout>